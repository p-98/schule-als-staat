{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": [], // override bun-types from global tsconfig
        "outDir": "./dist",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "Types/*": ["src/types/*"],
            "Types": ["../types.ts"],
            "Server": ["src/server.ts"],
            "Modules/*": ["src/modules/*"],
            "Database": ["src/database/database.ts"],
            "Util/*": ["src/util/*"],
            "Root/*": ["../*"]
        }
    },
    "include": [".", "../types.ts", "../types/*"]
}
