{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
        "paths": {
            "Components/*": ["./src/components/*"],
            "Scenes/*": ["./src/scenes/*"],
            "Utility/*": ["./src/util/*"],
            "Config": ["../config.ts"],
            "*": ["./src/@types/*"]
        }
    },
    "include": ["src/**/*", "next-env.d.ts", "../types.ts"],
    "exclude": ["node_modules"]
}
